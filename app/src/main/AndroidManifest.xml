<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="androidx.car.app.ACCESS_SURFACE" />
    <uses-permission android:name="androidx.car.app.MAP_TEMPLATES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.car.permission.CAR_INFO" />
    <uses-permission android:name="android.car.permission.CAR_SPEED" />
    
    <!-- Additional permissions for video playback -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appCategory="game"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.DriveHub">
        <meta-data
            android:name="distractionOptimized"
            android:value="true" />
        <meta-data
            android:name="android.car.application"
            android:value="true" />
        <meta-data
            android:name="android.max_aspect"
            android:value="4.0" />
        <meta-data
            android:name="androidx.car.app.minCarApiLevel"
            android:value="7" />
        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />
        <meta-data
            android:name="android.car.app.ALWAYS_ALLOW_UNOPTIMIZED"
            android:value="true" />
        <meta-data
            android:name="android.car.app.DRIVING_MODE_OPTIMIZED"
            android:value="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DriveHub.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.CAR_LAUNCHER" />
                <category android:name="androidx.car.app.category.NAVIGATION" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|density|uiMode|layoutDirection|locale|keyboardHidden"
            android:launchMode="singleTop"
            android:screenOrientation="unspecified"
            android:exported="true"
            android:resizeableActivity="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DriveHub">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.CAR_LAUNCHER" />
                <category android:name="androidx.car.app.category.NAVIGATION" />

                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>
            <layout
                android:minWidth="1dp"
                android:minHeight="1dp"
                android:gravity="fill"
                android:defaultWidth="800dp"
                android:defaultHeight="480dp" />
            <meta-data android:name="distractionOptimized" android:value="true" />
            <meta-data android:name="android.max_aspect" android:value="5.0" />
            <meta-data android:name="android.car.application" android:value="true" />
            <meta-data android:name="android.car.application.ALWAYS_ALLOW" android:value="true" />
        </activity>


        

    </application>

</manifest>
