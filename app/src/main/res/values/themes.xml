<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DriveHub" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.DriveHub.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Bottom Sheet Shape -->
    <style name="ShapeAppearanceOverlay.App.Card.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>