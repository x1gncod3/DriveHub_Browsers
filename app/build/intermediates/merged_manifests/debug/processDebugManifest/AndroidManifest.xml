<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drivehub.browser"
    android:versionCode="3"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="29"
        android:targetSdkVersion="36" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="androidx.car.app.ACCESS_SURFACE" />
    <uses-permission android:name="androidx.car.app.MAP_TEMPLATES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.car.permission.CAR_INFO" />
    <uses-permission android:name="android.car.permission.CAR_SPEED" />

    <!-- Additional permissions for video playback -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <queries>
        <provider
            android:name="androidx.car.app.connection.provider"
            android:authorities="androidx.car.app.connection" />
    </queries>

    <permission
        android:name="com.drivehub.browser.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.drivehub.browser.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appCategory="game"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DriveHub"
        android:usesCleartextTraffic="true" >
        <meta-data
            android:name="distractionOptimized"
            android:value="true" />
        <meta-data
            android:name="android.car.application"
            android:value="true" />
        <meta-data
            android:name="android.max_aspect"
            android:value="4.0" />
        <meta-data
            android:name="androidx.car.app.minCarApiLevel"
            android:value="7" />
        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />
        <meta-data
            android:name="android.car.app.ALWAYS_ALLOW_UNOPTIMIZED"
            android:value="true" />
        <meta-data
            android:name="android.car.app.DRIVING_MODE_OPTIMIZED"
            android:value="true" />

        <activity
            android:name="com.drivehub.browser.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DriveHub.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.CAR_LAUNCHER" />
                <category android:name="androidx.car.app.category.NAVIGATION" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.drivehub.browser.MainActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|density|uiMode|layoutDirection|locale|keyboardHidden"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:resizeableActivity="true"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.DriveHub" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.CAR_LAUNCHER" />
                <category android:name="androidx.car.app.category.NAVIGATION" />

                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>

            <layout
                android:defaultHeight="480dp"
                android:defaultWidth="800dp"
                android:gravity="fill"
                android:minHeight="1dp"
                android:minWidth="1dp" />

            <meta-data
                android:name="distractionOptimized"
                android:value="true" />
            <meta-data
                android:name="android.max_aspect"
                android:value="5.0" />
            <meta-data
                android:name="android.car.application"
                android:value="true" />
            <meta-data
                android:name="android.car.application.ALWAYS_ALLOW"
                android:value="true" />
        </activity>
        <activity
            android:name="androidx.car.app.CarAppPermissionActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <receiver
            android:name="androidx.car.app.notification.CarAppNotificationBroadcastReceiver"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.drivehub.browser.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="okhttp3.internal.platform.PlatformInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>